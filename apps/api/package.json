{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "node --import=tsx --watch index.ts",
    "build": "tsc && tsup",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit",
    "check": "biome check --write"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.5.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-random-string": "^5.0.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "express-fileupload": "^1.5.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.3",
    "morgan": "^1.10.1",
    "node-schedule": "^2.1.1",
    "otp-generator": "^4.0.1",
    "razorpay": "^2.9.4",
    "resend": "^4.6.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.1",
    "@types/hpp": "^0.2.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.4.0",
    "@types/nodemailer": "^6.4.16",
    "@types/otp-generator": "^4.0.2",
    "cross-env": "^7.0.3",
    "tsup": "^8.3.6",
    "tsx": "^4.20.6"
  },
  "tsup": {
    "entry": [
      "index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  }
}
